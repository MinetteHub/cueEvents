<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.NotificationController">

    <top>
        <Label text="Notifications" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15;" />
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox fx:id="notificationContainer" spacing="10" style="-fx-padding: 15;">
                    <!-- Les notifications seront ajoutÃ©es ici dynamiquement -->
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <Button text="Retour" onAction="#handleBack"
                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 5;"
                BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>
