<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.NotificationCardController"
      spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;">

    <VBox spacing="4" alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
        <Label fx:id="messageLabel" wrapText="true" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="dateLabel" style="-fx-text-fill: gray; -fx-font-size: 11px;" />
        <Hyperlink fx:id="linkLabel" text="Voir plus..." onAction="#handleOpenLink" />
    </VBox>
</HBox>
