<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.PostCardController" spacing="10"
      style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 15;">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <ImageView fx:id="imgUserAvatar" fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
            <image>
                <Image url="@/images/avatar_url.jpg"/>
            </image>
        </ImageView>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="authorLabel" style="-fx-font-weight: bold;">
                <font>
                    <Font size="13.0"/>
                </font>
            </Label>
            <Label fx:id="lblPostDate" style="-fx-text-fill: #888888; -fx-font-size: 11;" />
        </HBox>
    </HBox>

    <Label fx:id="titleLabel" style="-fx-font-weight: bold;">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>

    <Label fx:id="contentLabel" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
    </Label>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Button fx:id="btnLike" text="Like (0)" onAction="#handleLike"
                style="-fx-background-color: transparent; -fx-text-fill: #3498db;">
            <font>
                <Font size="12.0"/>
            </font>
        </Button>
        <Button fx:id="btnEdit" text="Modifier" onAction="#handleEdit"
                style="-fx-background-color: transparent; -fx-text-fill: #3498db;">
            <font>
                <Font size="12.0"/>
            </font>
        </Button>
        <Button text="Commenter" onAction="#handleComment"
                style="-fx-background-color: transparent; -fx-text-fill: #3498db;">
            <font>
                <Font size="12.0"/>
            </font>
        </Button>
        <Button fx:id="btnDelete" text="Supprimer" onAction="#handleDelete"
                style="-fx-background-color: transparent; -fx-text-fill: #e74c3c;">
            <font>
                <Font size="12.0"/>
            </font>
        </Button>
    </HBox>

    <VBox fx:id="commentsContainer" spacing="10" style="-fx-padding: 10; -fx-background-color: #f9f9f9;">
        <padding>
            <Insets top="10.0"/>
        </padding>
    </VBox>
</VBox>
