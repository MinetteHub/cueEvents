<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.PostDetailController" spacing="20" style="-fx-padding: 20;">

    <!-- Affichage du post -->
    <fx:include source="postCard.fxml"/>

    <!-- Section commentaires -->
    <Label text="Commentaires" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <VBox fx:id="commentsContainer" spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5;"/>

    <!-- Formulaire d'ajout de commentaire -->
    <Label text="Ajouter un commentaire" style="-fx-font-weight: bold;"/>
    <fx:include source="/commentForm.fxml"/>
</VBox>